generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chatroom {
  id        String   @id @default(cuid())
  name      String
  tags      String[]
  createdAt DateTime @default(now())

  messages  Message[]
}

model Message {
  id         String   @id @default(cuid())
  roomId     String
  username   String
  text       String
  timestamp  DateTime @default(now())
  expiresAt  DateTime

  chatroom   Chatroom @relation(fields: [roomId], references: [id])

  @@index([roomId])
}

